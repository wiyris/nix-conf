set $mod Mod4
set $left a
set $down e
set $up i
set $right c

set $term footclient
set $menu rofi -show drun -run-command 'uwsm app -- {cmd}'
set $clipboard stash list | rofi -dmenu -theme .config/rofi/theme/cliphist.rasi | stash decode | wl-copy
set $browser librewolf

output * bg /home/tsubaki/Pictures/wal/nan/kusa.jpg fill
output DP-2 res 2560x1440 scale 1

gaps inner 7
gaps outer 14

default_border pixel 2

input "type:keyboard" {
    repeat_rate 40
    repeat_delay 200
}

input * {
    accel_profile "flat"
    pointer_accel 0
}

bindsym $mod+Return exec uwsm-app -- $term
bindsym $mod+q kill
bindsym $mod+space exec $menu
bindsym $mod+k exec $clipboard
bindsym $mod+j exec uwsm-app -- $browser

floating_modifier $mod normal
bindsym $mod+shift+r reload

# bindsym $mod+Shift+q exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

bindsym $mod+minus resize grow width 10px
bindsym $mod+period resize grow height 10px
bindsym $mod+apostrophe resize shrink height 10px
bindsym $mod+equal resize shrink width 10px

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9

bindsym $mod+n workspace number 1
bindsym $mod+t workspace number 2
bindsym $mod+h workspace number 3
bindsym $mod+p workspace number 4
bindsym $mod+d workspace number 5
bindsym $mod+semicolon workspace number 6
bindsym $mod+u workspace number 7
bindsym $mod+o workspace number 8
bindsym $mod+y workspace number 9

bindsym $mod+Shift+n move container to workspace number 1
bindsym $mod+Shift+t move container to workspace number 2
bindsym $mod+Shift+h move container to workspace number 3
bindsym $mod+Shift+p move container to workspace number 4
